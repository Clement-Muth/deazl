{
  "compilerOptions": {
    "target": "es2022",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "@testing-library/jest-dom"
    ],
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".lintpcomparator/src/types/*.d.tstypes/*.d.ts",
    "pcomparator/.next/types/**/*.ts",
    "pcomparator/src/next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "pcomparator/node_modules",
    "pcomparator/.next",
    "pcomparator/__mocks__"
  ]
}
