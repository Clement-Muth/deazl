{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["@testing-library/jest-dom"],
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    },
  },
  "include": ["pcomparator/src/next-env.d.ts", "**/*.ts", "**/*.tsx", "pcomparator/.next/types/**/*.ts", ".lintpcomparator/src/types/*.d.tstypes/*.d.ts"],
  "exclude": ["pcomparator/node_modules", "pcomparator/.next", "pcomparator/__mocks__"]
}
