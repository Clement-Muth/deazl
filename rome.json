{
  "$schema": "https://docs.rome.tools/schemas/12.1.0/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "nursery": {
        "useGroupedTypeImport": "error",
        "noConsoleLog": "warn",
        "recommended": true
      },
      "suspicious": {
        "noImportAssign": "error",
        "recommended": true
      },
      "correctness": {
        "noUnusedVariables": "off",
        "recommended": true
      },
      "style": {
        "recommended": true
      }
    },
    "ignore": ["build/*", "node_modules", ".vercel", ".next", "*.pnp*", "public"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentSize": 2,
    "lineWidth": 110,
    "ignore": ["public", "tailwind.*", "postcss.*", "*next*", "node_modules", ".vercel", "*.pnp*", ".vscode"],
    "formatWithErrors": true
  },
  "javascript": {
    "formatter": {
      "trailingComma": "none",
      "semicolons": "always"
    }
  }
}
